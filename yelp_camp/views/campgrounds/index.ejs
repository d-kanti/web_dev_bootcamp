<% layout("layouts/boilerplate") %>

<h1>All Campgrounds</h1>
<ul>
  <% for(let camp of camps){ %>
  <!-- <li><a href="/campgrounds/<%= camp._id %>"><%= camp.title %></a></li> -->

  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= camp.image %> " alt="" calss="image-fluid " width="400" />
      </div>
      <div class="col-md-8">
        <h5 class="class-title "><%= camp.title %></h5>
        <p class="class-text"><%= camp.description %></p>
        <small class="text-muted "><%= camp.location %> </small>
        <br>
<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary mt-5">view</a>
      </div>
    </div>
  </div>

  <% } %>
</ul>
