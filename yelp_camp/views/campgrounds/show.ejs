<% layout("layouts/boilerplate") %> 

<div class="row">
  <div class="col-md-6 offset-3">
    <div class="card">
      <img src="<%= camp.image %>" class="card-img-top" alt="<%= camp.title %> ">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %> </h5>
        <p class="card-text container "><%= camp.description %> </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= camp.location %> </li>
        <li class="list-group-item">$ <%= camp.price %>/night</li>
      </ul>
      <div class="card-body">
        <a href="/campgrounds/<%= camp._id %>/edit" class="card-link btn btn-info">Edit</a>
        <form class = 'd-inline' action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
          <button class="card-link btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>


    <script>

      document.getElementById("editl").classList.add("active");
      document.getElementById("editl").classList.remove("disabled");
      let ii = "<%= camp._id%>";
      document.getElementById("editl").href = `/campgrounds/${ii}/edit`;
      
    </script>